<div class="w3-row w3-center w3-border w3-border-dark-grey">
  <div id="Pizza" class="w3-container menu w3-padding-32 w3-sand">
     <h2>You Searched Our Menu For <%= @search_term %></h2>

     <% if @items.length == 0  %>
     <br />
     <h2>Sorry, no meals were found to match your search!</h2>
     <% end %>
  <table class="catalog">
    <% @items.each do |item| %>
      <tr>
        <td>
           
          <div class="title">
            <%= link_to item.title, item %>
          </div>
          <div class="category">
            <%= item.category %>
          </div>
          <div class="description">
            <%= item.description %>    
          </div>  
          <div class="price">
             <%= number_to_currency(item.price, :unit => "â‚¬") %>
          </div>
          <div class="links">
            <% if user_signed_in? %>
                <a href="/cart/<%= item.id %>"class="button">ADD TO CART</a>
            <%else%>
                <%= link_to 'Register', new_user_registration_path, :class => "button", :role => "button" %>
                <%= link_to 'Sign in', new_user_session_path, :class => "button", :role => "button" %>
                <%= link_to 'Back', items_path, :class => "button", :role => "button" %>
            <%end%>  
         </div>
        </td>
      </tr>
    <% end %>
   </table>
  </div>
</div>

 
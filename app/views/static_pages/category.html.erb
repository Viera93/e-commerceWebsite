 <% if @items.length == 0 %>
<div class="w3-row w3-center w3-border w3-border-dark-grey">
  <div id="Pizza" class="w3-container menu w3-padding-32 w3-sand">
<h2>Sorry, there is no a meal matching your search!</h2> 
  </div>
</div>

<% else %>
   
<p id="notice"><%= notice %></p>

<!-- Menu Container -->
<div class="w3-container w3-black w3-padding-64 w3-xxlarge" id="menu">
  <div class="w3-content">
    <h1 class="w3-center w3-jumbo" style="margin-bottom:64px">MENU</h1>
    
    <% @items.each do |item| %>
     <div class="w3-row w3-center w3-border w3-border-dark-grey">
        <div class="w3-col s4 tablink w3-padding-large w3-hover-red"><p><%=item.category%></p></div>
           <div id="Pizza" class="w3-container menu w3-padding-32 w3-white">
           <h1><b><%=item.title%></b> <span class="w3-right w3-tag w3-dark-grey w3-round"><%= number_to_currency(item.price, :unit => "â‚¬") %></span></h1>
	       <a href="/cart/<%= item.id %>"class="w3-right w3-tag w3-hover-red w3-round">ADD TO CART</a>
           <p class="w3-text-grey"><%=item.description%></p>
           <hr>
           <p>
           <%= link_to 'Show',  item, :class => "button", :role => "button" %>
           <% if user_signed_in? && current_user.admin? %>
              <%= link_to 'Edit',  edit_item_path(item), :class => "button", :role => "button" %>
              <%= link_to 'Destroy',  item, method: :delete, data: { confirm: 'Are you sure?' }, :class => "button", :role => "button" %>
              <%= link_to 'New Item',  new_item_path, :class => "button", :role => "button" %>
            <% end %>
            
           </p>
           </div>
    <%end%>
     </div>
   </div> 
</div>
<br>
<% end %>
 
   